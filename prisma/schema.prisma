generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  assetId        BigInt          @id
  name           String
  imageUrl       String?
  description    String?
  manipulated    Boolean         @default(false)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  inventoryItems InventoryItem[]
  priceHistory   PriceHistory[]
  sales          Sale[]
  watchlist      Watchlist[]
  notifications  Notification[]
  snipeConfigs   SnipeConfig[]

  @@index([assetId])
}

model PriceHistory {
  id           String   @id @default(cuid())
  itemId       BigInt
  price        Float
  rap          Float?
  lowestResale Float?
  salesVolume  Int?
  timestamp    DateTime @default(now())
  item         Item     @relation(fields: [itemId], references: [assetId], onDelete: Cascade)

  @@index([itemId, timestamp])
  @@index([timestamp])
}

model Sale {
  id       String   @id @default(cuid())
  itemId   BigInt
  oldRap   Float
  newRap   Float
  saleDate DateTime @default(now())
  item     Item     @relation(fields: [itemId], references: [assetId], onDelete: Cascade)

  @@index([itemId, saleDate])
  @@index([saleDate])
}

model User {
  robloxUserId         BigInt              @id
  username             String
  displayName          String?
  avatarUrl            String?
  description          String?
  role                 String              @default("user")
  authMethod           String?             // "bio" or "oauth"
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  discordId            String?
  discordUsername      String?
  discordNotifications Boolean             @default(false)
  inventorySnapshots   InventorySnapshot[]
  sessions             Session[]
  watchlist            Watchlist[]
  notifications        Notification[]
  pushSubscriptions    PushSubscription[]
  snipeConfigs         SnipeConfig[]
}

model InventorySnapshot {
  id          String          @id @default(cuid())
  userId      BigInt
  createdAt   DateTime        @default(now())
  totalRAP    Float?
  totalItems  Int?
  uniqueItems Int?
  items       InventoryItem[]
  user        User            @relation(fields: [userId], references: [robloxUserId], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([createdAt])
}

model InventoryItem {
  snapshotId   String
  assetId      BigInt
  userAssetId  BigInt
  scannedAt    DateTime          @default(now())
  serialNumber Int?
  item         Item              @relation(fields: [assetId], references: [assetId])
  snapshot     InventorySnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  @@id([snapshotId, userAssetId])
  @@index([snapshotId])
  @@index([assetId])
  @@index([userAssetId])
  @@index([serialNumber])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       BigInt
  accessToken  String?
  authMethod   String?  // "bio" or "oauth"
  user         User     @relation(fields: [userId], references: [robloxUserId], onDelete: Cascade)
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([sessionToken])
  @@index([userId])
}

model Watchlist {
  userId    BigInt
  itemId    BigInt
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [robloxUserId], onDelete: Cascade)
  item      Item     @relation(fields: [itemId], references: [assetId], onDelete: Cascade)

  @@id([userId, itemId])
  @@index([userId])
  @@index([itemId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    BigInt
  itemId    BigInt
  type      String
  message   String
  oldValue  Float?
  newValue  Float?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [robloxUserId], onDelete: Cascade)
  item      Item     @relation(fields: [itemId], references: [assetId], onDelete: Cascade)

  @@index([userId, read])
  @@index([createdAt])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    BigInt
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [robloxUserId], onDelete: Cascade)

  @@index([userId])
}

model SnipeConfig {
  id        String   @id @default(cuid())
  userId    BigInt
  assetId   BigInt?
  minDeal   Float    @default(10)
  minPrice  Float?
  maxPrice  Float?
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [robloxUserId], onDelete: Cascade)
  item      Item?    @relation(fields: [assetId], references: [assetId], onDelete: Cascade)

  @@index([userId])
  @@index([assetId])
}

model SnipeDeal {
  id        String   @id @default(cuid())
  assetId   BigInt
  name      String
  imageUrl  String?
  price     Float
  rap       Float
  deal      Float
  createdAt DateTime @default(now())

  @@index([createdAt])
}