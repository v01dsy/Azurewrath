generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  assetId        BigInt          @id
  name           String
  imageUrl       String?
  description    String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  inventoryItems InventoryItem[]
  priceHistory   PriceHistory[]
  sales          Sale[]

  @@index([assetId])
}

model PriceHistory {
  id           String   @id @default(cuid())
  itemId       BigInt   // CHANGED FROM String TO BigInt
  price        Float
  rap          Float?
  lowestResale Float?
  salesVolume  Int?
  timestamp    DateTime @default(now())
  item         Item     @relation(fields: [itemId], references: [assetId], onDelete: Cascade)

  @@index([itemId, timestamp])
  @@index([timestamp])
}

model Sale {
  id       String   @id @default(cuid())
  itemId   BigInt
  oldRap   Float
  newRap   Float
  saleDate DateTime @default(now())
  item     Item     @relation(fields: [itemId], references: [assetId], onDelete: Cascade)

  @@index([itemId, saleDate])
  @@index([saleDate])
}

model User {
  robloxUserId      BigInt              @id  // CHANGE FROM String TO BigInt
  username          String
  displayName       String?
  avatarUrl         String?
  description       String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  inventorySnapshots InventorySnapshot[]
  sessions          Session[]
}

model InventorySnapshot {
  id          String          @id @default(cuid())
  userId      BigInt          // CHANGE FROM String TO BigInt
  createdAt   DateTime        @default(now())
  totalRAP    Float?
  totalItems  Int?
  uniqueItems Int?
  items       InventoryItem[]
  user        User            @relation(fields: [userId], references: [robloxUserId], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([createdAt])
}

model InventoryItem {
  snapshotId   String
  assetId      BigInt
  userAssetId  String
  scannedAt    DateTime          @default(now())
  serialNumber Int?
  item         Item              @relation(fields: [assetId], references: [assetId])
  snapshot     InventorySnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  @@id([snapshotId, userAssetId])
  @@index([snapshotId])
  @@index([assetId])
  @@index([userAssetId])
  @@index([serialNumber])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       BigInt   // CHANGE FROM String TO BigInt
  user         User     @relation(fields: [userId], references: [robloxUserId], onDelete: Cascade)
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([sessionToken])
  @@index([userId])
}